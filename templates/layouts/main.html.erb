        <span class="navbar-text mr-3">
          Hello <%= current_user.first_name %>
        </span>
        <a class="btn btn-outline-secondary btn-sm" data-method="post" href="/logout">
          <i class="fas fa-sign-out-alt"></i>
          Sign out
        </a>
      <% else %>
        <a class="btn btn-link btn-sm mr-2" href="/login">
          Sign in
        </a>
        <a class="btn btn-outline-secondary btn-sm" href="/signup">
          Sign up
        </a>
