    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand" href="/">
            <i class="fas fa-code"></i>
            <span class="text-uppercase">D&eacute;lon R. Newman</span>
            <span class="font-italic">Mentoring</span>
        </a>
