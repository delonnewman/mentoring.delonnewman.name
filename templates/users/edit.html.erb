<%= link_to '/admin/users', '<< Back' %>
<h1>Edit <%= titlecase user.class.canonical_name %></h1>

<% attributes = user.class.attributes.sort_by(&:display_order).reject { |a| a[:edit] == false } %>
<form action="/admin/users/<%= user.id %>" method="POST">
  <% attributes.each do |attr| %>
    <div class="field-group mb-3">
      <label for="<%= attr.name %>"><%= attr.display_name %></label>
      <%= form_field(attr, user) %>
    </div>
  <% end %>
  <button class="btn btn-primary">Update</button>
</form>
