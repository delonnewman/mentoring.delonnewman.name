<h1 class="mt-4">Users</h1>
<table class="table">
  <thead>
    <th>Name</th>
    <th>Username</th>
    <th>Email</th>
    <th>Role</th>
  </thead>
  <tbody>
    <% users.each do |user| %>
      <tr>
	<td><%= user.displayname %></td>
	<td><%= user.username %></td>
	<td><%= user.email %></td>
	<td><%= user.role %></td>
      </tr>
    <% end %>
  </tbody>
</table>
